PID_FILE="/opt/maps/pid"

start() {
    echo "Starting maps..."
    nohup /opt/maps/bin/start.sh > /var/log/maps/maps.log 2>&1 &
}

stop() {
    echo "Stopping maps..."
    if [ -f "$PID_FILE" ]; then
        PID=$(cat $PID_FILE)
        if [ -n "$PID" ]; then
            kill $PID
            echo "maps stopped"
        else
            echo "PID file is empty"
        fi
        rm -f $PID_FILE
    else
        echo "PID file not found"
    fi
}

restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit 0
