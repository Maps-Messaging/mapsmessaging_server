# ---------------------------------------------------------------------------------------------------------
# Global Defaults
# ---------------------------------------------------------------------------------------------------------
#  Note: All global defaults can be overriden on the specific EndPoint by adding a _n at the end of
#        the key name. The server will then use this value in place of the global value.
#
#         For Example:
#           if you want to override "receiveBufferSize = 128000" as the global default for, say the 2 URL
#           then you add
#
#             url_2 = tcp://:::2000/
#             protocol_2 = mqtt,amqp,stomp
#             receiveBufferSize_2 = 64000
#
#
#           This will then set the receive buffer size for tcp port 2000 to use 64000 and NOT the 128000
#
# ---------------------------------------------------------------------------------------------------------

# ---------------------------------------------------------------------------------------------------------
# SSL configuratin properties
#
ssl_keyStoreFile = my-keystore.jks
ssl_keyStorePassphrase=password
ssl_trustStoreFile = my-keystore.jks
ssl_trustStorePassphrase=password
ssl_keyManagerFactory = SunX509
ssl_trustManagerFactory = SunX509
ssl_SSLContext =TLS
ssl_keyStore =JKS
ssl_trustStore=JKS

# ---------------------------------------------------------------------------------------------------------
# tcp layer configuration
#
receiveBufferSize = 128000
sendBufferSize = 128000
timeout = 60000
backlog = 100

readDelayOnFragmentation = 100
enableReadDelayOnFragmentation = true

# ---------------------------------------------------------------------------------------------------------
# Generic protocol configuration
#
serverReadBufferSize =  1M
serverWriteBufferSize = 1M
selectorThreadCount   = 5

# ---------------------------------------------------------------------------------------------------------
# MQTT Protocol configuration
#
# One Day, by default is the length of time a MQTT sessionImpl will be stored before it is deleted
#
maximumSessionExpiry = 86400

maximumBufferSize=10M
serverReceiveMaximum = 10
clientReceiveMaximum = 65535
clientMaximumTopicAlias = 32767
serverMaximumTopicAlias = 0

# ---------------------------------------------------------------------------------------------------------
# MQTT 5.0 specific
#
minServerKeepAlive = 0
maxServerKeepAlive = 60

# ---------------------------------------------------------------------------------------------------------
# LoRa Gateway specific
#

# Maximum Packets per second limit to ensure the radio isn't flooded
LoRaMaxTransmissionRate = 20

# ---------------------------------------------------------------------------------------------------------
# MQTT-SN specific configuration
#
eventsPerTopicDuringSleep = 10
maxTopicsInSleep = 10

# ---------------------------------------------------------------------------------------------------------
# Server interface 4
#
url_4 = tcp://0.0.0.0:8675/
protocol_4 = stomp,mqtt

# ---------------------------------------------------------------------------------------------------------
# Server interface 6
#
url_6 = tcp://0.0.0.0:1883/
protocol_6 = mqtt,ws
selectorThreadCount_6 = 24
auth_6 = public
receiveBufferSize_6 = 32000000
sendBufferSize_6    = 32000000

#
# AMQP Interface
#
url_11 = tcp://0.0.0.0:5672/
protocol_11 = amqp
auth_11 = public
SaslMechanisms_11 = ANONYMOUS, CRAM_MD5, DIGEST-MD5, GSSAPI


# ---------------------------------------------------------------------------------------------------------
# Server interface 6
#
url_12 = tcp://0.0.0.0:1882/
protocol_12 = mqtt,ws
selectorThreadCount_12 = 24
auth_12 = public
receiveBufferSize_12 = 32000000
sendBufferSize_12    = 32000000
