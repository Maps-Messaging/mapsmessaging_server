<Configuration status="WARN">
  <Appenders>
    <File name="LogFile" fileName="messaging.log">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss}, %X{category}, %X{endpoint}, %X{protocol}-%X{version}, %X{session}, [%t] %-5level %logger{36} - %msg%n"/>
    </File>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss}, %X{category}, %X{endpoint}, %X{protocol}-%X{version}, %X{session}, [%t] %-5level %logger{36} - %msg%n"/>
    </Console>

  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="Console" level="debug"/>
      <appender-ref ref="LogFile" />
    </Root>
  </Loggers>
</Configuration>