[Unit]
Description=Message Daemon Service
After=network.target

[Service]
EnvironmentFile=/etc/message_daemon/message_daemon.env
ExecStart=/opt/message_daemon/bin/start.sh
ExecStopPost=/bin/rm -f /opt/message_daemon/pid
Restart=on-failure
StandardOutput=append:/var/log/message-daemon/message-daemon.log
StandardError=append:/var/log/message-daemon/message-daemon.log
User=mapsmessaging
Group=mapsmessaging

[Install]
WantedBy=multi-user.target
